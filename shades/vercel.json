{
    "version": 2,
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install --legacy-peer-deps",
    "devCommand": "npm run dev",
    "rewrites": [
        {
            "source": "/api/auth/login",
            "destination": "/api/auth.js"
        },
        {
            "source": "/api/auth/me",
            "destination": "/api/auth.js"
        },
        {
            "source": "/api/admin/products",
            "destination": "/api/admin/products.js"
        },
        {
            "source": "/api/admin/products/:id",
            "destination": "/api/admin/products.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.js": {
            "maxDuration": 30
        }
    }
}